{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/../src/$1",
      "^@/(.*)$": "<rootDir>/../src/$1",
      "^@test/(.*)$": "<rootDir>/$1"
    },
    "moduleDirectories": ["node_modules", "<rootDir>/../"],
    "testTimeout": 30000
  }